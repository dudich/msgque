        button.btn.btn-primary(type='submit', ng-click='$ctrl.saveKannel($ctrl.kannelUrl)') Save


    iframe( width="100%"  height='600' ng-if='$ctrl.status' src="{{$ctrl.$sce.trustAsResourceUrl($ctrl.status)}}")
