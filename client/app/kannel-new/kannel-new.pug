header#banner
.container
  .row
    .col-lg-12
      h1.page-header Promotional

  form.thing-form
    label {{$ctrl.message}}
    p.input-group
      input.form-control(type='text', placeholder='Start typing Kannel Status URL', ng-model='$ctrl.kannelUrl')
